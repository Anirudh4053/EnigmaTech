<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ui.share.ShareFragment">

    <ImageView
        android:id="@+id/gPlusImageView"
        android:layout_width="@dimen/signWidth"
        android:layout_height="@dimen/signWidth"
        android:src="@drawable/ic_google_plus"
        app:layout_constraintBottom_toTopOf="@+id/twitterImageView"
        app:layout_constraintEnd_toStartOf="@+id/faceImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/faceImageView"
        android:layout_width="@dimen/signWidth"
        android:layout_height="@dimen/signWidth"
        android:src="@drawable/ic_facebook"
        app:layout_constraintBottom_toTopOf="@+id/twitterImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gPlusImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/twitterImageView"
        android:layout_width="@dimen/signWidth"
        android:layout_height="@dimen/signWidth"
        android:src="@drawable/ic_twitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gPlusImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>